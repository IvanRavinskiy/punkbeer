{
  "dependencies": {
    "eslint": "^8.12.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": "^7.0.4",
    "lerna": "^4.0.0",
    "prettier": "^2.6.2",
    "prettier-eslint": "^13.0.0"
  },
  "name": "@iwann/punkbeer",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "components/*"
    ],
    "nohoist": [
      "**/react-native",
      "**/react-native/**",
      "**/react-native-typescript-transformer",
      "**/react-native-config"
    ]
  },
  "scripts": {
    "bootstrap": "npx lerna clean --yes && npx rimraf node_modules && npx lerna bootstrap",
    "startweb": "lerna run --scope @iwann/web start",
    "startmobileserv": "cp .env apps/mobile && lerna run --scope @iwann/mobile start",
    "startapp": "lerna run --scope @iwann/mobile android",
    "husky-prepare": "husky install",
    "fix": "npx eslint \"**/*.{js,jsx,ts,tsx}\" --fix"
  }
}
