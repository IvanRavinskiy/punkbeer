{
  "dependencies": {
    "eslint-plugin-import": "^2.25.4"
  },
  "name": "@iwann/punkbeer",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "components/*"
    ],
    "nohoist": [
      "**/react-native",
      "**/react-native/**",
      "**/react-native-typescript-transformer",
      "**/react-native-config"
    ]
  },
  "scripts": {
    "bootstrap": "npx lerna clean --yes && npx rimraf node_modules && npx lerna bootstrap",
    "start-mobile-android": "npx lerna run --scope @iwann/mobile android",
    "start-mobile-server": "cp .env apps/mobile && npx lerna run --scope @iwann/mobile start",
    "start-web": "npx lerna run --scope @iwann/web start"
  }
}
